{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "library",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Library name",
      "x-prompt": "Name of the library",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "project": {
      "type": "string",
      "description": "the name of the project for library to be associated with"
    },
    "directory": {
      "type": "string",
      "description": "the name of the folder to generate in, generally shared, or data"
    },
    "tags": {
      "type": "string",
      "description": "Tags for linting purposes"
    }
  },
  "required": ["name"]
}

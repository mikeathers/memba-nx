{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "jest-config",
  "type": "object",
  "properties": {
    "projectName": {
      "type": "string",
      "description": "Name of the Project",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "prefillJestSetup": {
      "type": "boolean",
      "description": "Whether or not to use a pre-generated jest-setup.ts",
      "default": true
    },
    "setupJestPath": {
      "type": "string",
      "description": "Path to the setup-jest.ts file"
    }
  },
  "required": ["projectName"]
}

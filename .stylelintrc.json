{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-idiomatic-order",
    "stylelint-config-prettier",
    "stylelint-config-css-modules"
  ],
  "plugins": ["stylelint-declaration-strict-value"],
  "ignoreFiles": ["node_modules/**", "dist/**"],
  "ignoreProperties": ["aspect-ratio"],
  "rules": {
    "order/properties-alphabetical-order": null,
    "no-descending-specificity": null,
    "declaration-colon-newline-after": null,
    "selector-descendant-combinator-no-non-space": null,
    "value-list-comma-newline-after": null,
    "indentation": null,
    "value-keyword-case": [
      "lower",
      {
        "ignoreProperties": ["composes", "--font-family"]
      }
    ],
    "selector-pseudo-element-no-unknown": [
      true,
      {
        "ignorePseudoElements": ["range-thumb", "range-track"]
      }
    ],
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "export",
          "import",
          "global",
          "local",
          "focus-visible",
          "focus-within"
        ]
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": ["composes", "compose-with", "text-remove-gap"]
      }
    ],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "value",
          "for",
          "mixin",
          "define-mixin",
          "mixin-content"
        ]
      }
    ],
    "scale-unlimited/declaration-strict-value": [
      ["/color/"],
      { "ignoreValues": ["currentColor"], "disableFix": true }
    ],
    "custom-property-pattern": null,
    "selector-class-pattern": "^[a-z][a-zA-Z0-9]+$"
  }
}
